# Font settings
font-family = VictorMono NFM Light
font-size = 21
font-thicken = true
window-inherit-font-size = true

# Quit Ghostty once the last window has been closed
quit-after-last-window-closed = true
confirm-close-surface = false

# Do not inherit the current working directory
window-inherit-working-directory = false

# Auto-update Ghostty
auto-update = download

# Appearance
## Color scheme
theme = dark:base16-gruvbox-material-dark-soft,light:base16-equilibrium-light

## Cursor style
cursor-style = block
cursor-style-blink = false

## Quick terminal appearance
quick-terminal-position = center
quick-terminal-animation-duration = 0

# macOS-specific settings
macos-titlebar-style = tabs
macos-icon = custom-style
macos-icon-ghost-color = #f5f0e7
macos-icon-screen-color = #f5f0e7
macos-icon-frame = plastic

# Key bindings
keybind = super+shift+r=reload_config
keybind = global:super+shift+grave_accent=toggle_quick_terminal
